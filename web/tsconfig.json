{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "outDir": "dist"
  },
  "include": ["src/*.ts", "playwright/**/.ts", "src/lambda.ts"],
  "exclude": ["**/node_modules/**"]
}
