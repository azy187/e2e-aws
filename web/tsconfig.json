{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["node"],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "playwright/tests/**/*.spec.ts", "playwright.config.ts"],
  "exclude": ["**/node_modules/**"]
}
